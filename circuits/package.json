{
  "name": "@zk-agent/circuit",
  "version": "0.0.1",
  "scripts": {
    "compile:issue": "circom circuits/issue_closed.circom --r1cs --wasm --sym --c --output build -l node_modules",
    "compile:pr": "circom circuits/pr_merged.circom --r1cs --wasm --sym --c --output build -l node_modules",
    "compile": "mkdir -p out && npm run compile:issue && npm run compile:pr",
    "gen-input:issue": "npx tsx ../helper/src/generateInput.ts --email=./emls/issue_closed.eml --output=inputs --type=issue_closed",
    "gen-input:pr": "npx tsx ../helper/src/generateInput.ts --email=./emls/pr_merged.eml --output=inputs --type=pr_merged",
    "gen-input": "mkdir -p inputs && npm run gen-input:issue && npm run gen-input:pr",
    "gen-zkey:issue": "cd ./scripts && CIRCUIT_NAME=issue_closed ./2_gen_zkey_unsafe.sh && cd ..",
    "gen-zkey:pr": "cd ./scripts && CIRCUIT_NAME=pr_merged ./2_gen_zkey_unsafe.sh && cd ..",
    "gen-zkey": "npm run genzkey:issue && npm run genzkey:pr",
    "gen-wtns:issue": "cd ./scripts && CIRCUIT_NAME=issue_closed ./1_gen_wtns.sh && cd ..",
    "gen-wtns:pr": "cd ./scripts && CIRCUIT_NAME=pr_merged ./1_gen_wtns.sh && cd ..",
    "gen-wtns": "npm run gen-wtns:issue && npm run gen-wtns:pr",
    "gen-proof:issue": "cd ./scripts && CIRCUIT_NAME=issue_closed ./3_gen_proof.sh && cd ..",
    "gen-proof:pr": "cd ./scripts && CIRCUIT_NAME=pr_merged ./3_gen_proof.sh && cd ..",
    "gen-proof": "npm run gen-proof:issue && npm run gen-proof:pr",
    "gen-verifier:issue": "cd ./scripts && CIRCUIT_NAME=issue_closed ./4_gen_sol_verifier.sh && cd ..",
    "gen-verifier:pr": "cd ./scripts && CIRCUIT_NAME=pr_merged ./4_gen_sol_verifier.sh && cd ..",
    "gen-verifier": "npm run gen-verifier:issue && npm run gen-verifier:pr",
    "clear": "rm -rf build input",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@types/chai": "^4.3.11",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.16",
    "chai": "^5.0.3",
    "circom_tester": "^0.0.20",
    "cross-env": "^7.0.3",
    "ffjavascript": "^0.2.63",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "snarkjs": "^0.7.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@zk-email/circuits": "^3.2.3",
    "@zk-email/helpers": "^3.1.3",
    "circomlib": "^2.0.5"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transformIgnorePatterns": [
      "node_modules/(?!chai/)",
      "node_modules/(?!(@zk-email)/)"
    ]
  }
}
